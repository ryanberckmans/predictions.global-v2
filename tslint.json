{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "rules": {
    "curly": false,
    "interface-name": false,
    "jsx-self-close": false,
    "max-classes-per-file": false,
    "no-console": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "variable-name": false
  },
  "linterOptions": {
    "exclude": [
      "public/orbit-web/**/*.js",
      "config/**/*.js",
      "node_modules/**/*.ts",
      "src/generated/**/*.{ts,js}"
    ]
  }
}
